# File name: graphboy9000.kv
#:kivy 1.7.0

<FieldLabel@Label>:
    font_size: 24
<FieldInput@TextInput>:
    size: 200, 30

<Menu>:
    cols: 1
    Label:
        text: 'Graph Boy 9000'
        font_size: 70
    GridLayout:
        cols: 2
        spacing: 10
        row_default_height: 30
        row_force_default: True
        padding: [30,10,30,10]
        FieldLabel:
            text: 'Graph Title:'
        FieldInput:
            id: graph_title
            focus: True

        FieldLabel:
            text: 'X-Axis Label:'
        FieldInput:
            id: xaxis_label
    
        FieldLabel:
            text: 'Y-Axis Label:'
        FieldInput:
            id: yaxis_label
        
        FieldLabel:
            text: 'Data Series Label:'
        FieldInput:
            id: data_series_label
    
        FieldLabel:
            text: 'Line of Best Fit:'
        CheckBox:
            id: lbf_check

        FieldLabel:
            text: 'Dots / Line Markers'
        GridLayout:
            cols: 2
            CheckBox:
                id: dots_radio
                group: 'marker'
                active: True
            CheckBox:
                id: line_radio
                group: 'marker'

        GridLayout:
            cols: 2
            spacing: 30
            FieldLabel:
                id: current_series
                text: 'Series 1'           
            FieldLabel:
                id: current_value
                text: 'Value 1'
        GridLayout:
            cols: 2
            spacing: 30
            TextInput:
                id: x_value
            TextInput:
                id: y_value

        Button:
            id: series_button
            text: 'New Series'
            on_release: root.new_series()       
        Button:
            id: next_button
            text: 'Enter Value'
            on_release: root.current_value()

        Button:
            id: delete_series
            text: 'Delete Series'
            on_release: root.delete_series()
        Button:
            id: undo_button
            text: 'Undo Entry'
            on_release: root.undo_entry()
        
        GridLayout:
            cols: 2
            Label:
                text: 'Line of best fit equation:'
            Label:
                id: lbf_equation

        GridLayout:
            cols: 2
            Label:
                text: 'R squared value:'
            Label:
                id: r_squared
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: [15,5,15,5]
        Button:
            id: exit_button
            text: 'Exit'
            size_hint: [.1, .2]
            on_release: root.exit_app()
        Button:
            id: submit_button
            text: 'Submit'
            size_hint: [.1, .2]
            on_release: root.submit()
        
                     
    
    